<section class="action2 container-fluid text-center wow fadeIn">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
          <div style="background:transparent !important" class="jumbotron">
            <div id = "image_input">
              <% if @user.image.model[:image] == nil %>
                <%= image_tag "icon-user-default.png", size: "200"%>
              <% else %>
                <%= image_tag @user.image.to_s, size: "200"%>
              <% end %>
            </div>
          </div>
        </div>
    </div>
</section>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      Name: <%= @user.name %>
    </h3>
  </div>
  <div class="panel-body">
    Location: <%= @user.location %>
    <br></br>
    Mission: <%= @user.bio %>
  </div>
</div>
<br></br>
<h2>User's recent events</h2>
<div class="jumbotron">
<blockquote>
<% @user.events.each do |event| %>
  <div id='<%= event.id %>'>
    <h3><%= event.title %></h3>
  <blockquote>
  <h4>Karma: <%= event.points.length %></h4>
    <% array = [] %>
  <h4>From:
          <% event.point_givers.each do |name| %>
            <%= name %>,
          <% end %>
          <% if event.points.length == 0 %>
            hmmm looks like nobody
          <% else %>
            and the universe!
          <% end %>
          </h4>
  </blockquote>
</div>
<% end %> </h4>
</blockquote>
</div>

<% if user_signed_in? %>
  <h2>Give <%=@user.name%> Karma for something awesome they've done!</h2>
  <div id='giveable_karma'><h2>You have <%= current_user.giveable_karma %> Karma left to give away.</h2></div>
  <div id='give_karma'>
    <%= render 'points' %>
  </div>
<% end %>

<h2>Karma <%= @user.name%> has received: <div id="total_karma_uptick"><%= @points_received.length %></h2></div>

<section class="action2 container-fluid text-center wow fadeIn">
    <div class="row">
        <div class="col-lg-6 col-lg-offset-3">
            <!-- MailChimp Signup Form -->
            <!-- Replace the form action in the line below with your MailChimp embed action! For more informatin on how to do this please visit the Docs! -->
            <h2>Thank You for Coming to Goodli</h2>
            <!-- End MailChimp Signup Form -->
        </div>
    </div>
</section>
