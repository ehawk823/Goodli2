<header class="intro">

    <!-- Video from YouTube. Have Questions? How To: https://github.com/pupunzi/jquery.mb.YTPlayer/wiki -->
    <a id="bgndVideo" class="player" data-property="{videoURL:'https://www.youtube.com/watch?v=TYrX7w1uIq8', containment:'body', autoPlay:true, realfullscreen:true, optimizeDisplay:true, loop:true, mute:true, startAt:0, stopAt: 200, quality:'auto', opacity:1, showControls: false, showYTLogo:false, vol:25}"></a>

    <div class="intro-body">
        <!-- <img src="img/logo.png" alt="" class="wow fadeIn" data-wow-duration="4s" data-wow-delay=".4s"> -->
        <div id="clock" class="wow fadeIn" data-wow-duration="6s" data-wow-delay=".6s"></div>
        <p class="intro-text wow fadeIn" data-wow-duration="7s" data-wow-delay=".7s"><h1><%= image_tag "glogo.png", size: "600"%></h1></p>

    </div>

    <div class="video-controls">
        <a id="video-volume" class="fa fa-volume-off fa-lg" href="#"></a>
        <a id="video-play" class="fa fa-pause fa-lg" href="#"></a>
    </div>
</header>


<!-- Action2 Section -->
<section class="action2 container-fluid wow fadeIn">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
          <div style="background:transparent !important" class="jumbotron">
            <div class="new_event">
              <center><h1>Upcoming Events</h1></center>
              <br></br>
              <center>
              <% @dated_events.each do |event| %>
                <% if event.date > Time.now %>
                  <h3><%= link_to event.title, controller: "events", action: "show", id: event.id %></h3>

                    <h4>Creator: <%= link_to event.host.name, controller: "users", action: "show", id: event.host.id %></h4>
                    <h4>Location: <%= event.location %></h4>
                    <h4>Date: <%= event.date %> </h4>
                  </br>
                <% end %>
              <% end %>
            </center>
            </div>
          </div>
        </div>
    </div>
</section>

<!-- About Section -->
<section id="about" class="container-fluid text-center wow fadeIn">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
          <% if user_signed_in? %>
          <div class="panel panel-default">
          <div class="panel-heading">
            <h2 class="panel-title">Create an Event</h2>
          </div>
          <div style="background:transparent !important" class="panel-body" id="event_creator">
            <%= render 'create' %>
          <div id="event_errors">
          </div>
          </div>
        </div>
        <% else %>
          <h2>Log In to Create an Event!</h2>
        <% end %>
        </div>
    </div>
</section>

<!-- About2 Section -->
<section id="about2" class="container-fluid text-center wow fadeIn">
    <div class="col-lg-10 col-lg-offset-1">
        <h1>Karma Exchanged to Date: <%= @points.length %></h1>
    </div>
</section>

<!-- Action2 Section -->
<section class="action2 container-fluid text-center wow fadeIn">
    <div class="row">
        <div class="col-lg-6 col-lg-offset-3">
            <h4>GOODli is the premier social impact social network. Create and attend meaningful events, build your karma, and connect with users across the globe to advance your social impact mission. Find the code and an overview <a href="https://github.com/ehawk823/Goodli2">here</a>.</h4>

        </div>
    </div>
</section>
